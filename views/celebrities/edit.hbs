<h2>Edit the celebrity: {{celebrity.name}}</h2>

<form action="/celebrities/{{celebrity.id}}" method="POST">
  <label>
    name:
    <input type="text" name="name" value="{{celebrity.name}}" />
  </label>
  
  <label>
    occupation:
    <input type="text" name="occupation" value="{{celebrity.occupation}}" />
  </label>

  <label>
    catchPhrase:
    <textarea name="catchPhrase" cols="30" rows="4">{{celebrity.catchPhrase}}</textarea>
  </label>
  <button>Save changes</button>
</form>
